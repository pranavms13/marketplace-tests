        address seller;
        address buyer;
        uint price;
        uint racerId;
        uint timestamp;
    }
    mapping(uint256 => Trade) public trades;
    event RacerTradeEvent(uint8 status, address seller, address buyer, uint price, uint tokenId, uint timestamp);

